d=$(basename "${PWD}" | cut -d_ -f1,2)
r=/ospool/ap21/data/ckc/eht/GRMHD_kharma-v3

k="${d:0:-3}"
w="${d:  -1}"

awk '{if($3=='${w}') {print $1","$2","$4}}' "${r}/rho0/rho0_${k}.tsv" | while read Rh_i_rho0; do
	for p in "${r}/${d}/"torus.out0.*.h5; do
		f=$(basename $p)
		s=${f:11:-3}
		md5=$(awk '{if($1=="'${f}'") {print $2}}' "${r}/md5/md5_${k}_w${w}.tsv")
		echo osdf://${p},${md5},${s},${Rh_i_rho0}
	done
done
